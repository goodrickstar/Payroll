<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="itemIconTint">@color/custom_text_color</item>
        <item name="itemTextColor">@color/custom_text_color</item>
        <item name="itemBackground">@drawable/menu_background_color</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreenDialog">
        <item name="android:windowAnimationStyle">@style/Animation.WindowSlideUpDown</item>
    </style>

    <style name="Animation.WindowSlideUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="graphStyle">
        <item name="android:background">@color/colorBlack</item>
        <item name="backgroundColor">@color/colorBlack</item>
        <item name="graphBackgroundColor">@color/colorBlack</item>
        <item name="gridBackgroundColor">@color/colorBlack</item>
        <item name="domainLineColor">@color/off_white</item>
        <item name="rangeLineColor">@color/off_white</item>
        <item name="domainOriginLineColor">@color/off_white</item>
        <item name="rangeOriginLineColor">@color/off_white</item>
        <item name="titleTextColor">@color/ap_white</item>
        <item name="domainTitleTextColor">@color/ap_white</item>
        <item name="rangeTitleTextColor">@color/ap_white</item>
        <item name="gridInsetTop">0dp</item>
        <item name="graphPaddingRight">0dp</item>
        <item name="graphPaddingLeft">0dp</item>
        <item name="graphPaddingTop">0dp</item>
        <item name="graphPaddingBottom">0dp</item>
        <item name="gridInsetLeft">0dp</item>
        <item name="gridInsetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="domainLineExtension">0dp</item>
        <item name="rangeLineExtension">0dp</item>
        <item name="graphMarginTop">0dp</item>
        <item name="graphMarginBottom">0dp</item>
        <item name="graphMarginLeft">0dp</item>
        <item name="graphMarginRight">0dp</item>
        <item name="graphHeightMode">fill</item>
        <item name="graphWidthMode">fill</item>
        <item name="lineLabels">none</item>
        <item name="borderColor">@color/colorBlack</item>
    </style>
</resources>
